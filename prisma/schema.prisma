generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Model User - Bảng "nguoiDung"
model User {
  id            String    @id @map("idND")
  name          String    @map("hoTen")
  email         String    @unique @map("email")
  emailVerified Boolean   @default(false) @map("daXacThucEmail")
  image         String?   @map("anhDaiDien")
  createdAt     DateTime  @default(now()) @map("ngayTao")
  updatedAt     DateTime  @updatedAt @map("ngayCapNhat")
  courses       Course[]
  sessions      Session[]
  accounts      Account[]

  // Admin plugin fields - mapped sang tiếng Việt
  role       String?   @map("vaiTro")
  banned     Boolean?  @default(false) @map("biCam")
  banReason  String?   @map("lyDoCam")
  banExpires DateTime? @map("hetHanCam")

  @@map("nguoiDung")
}

//Model Session - Bảng "phienDangNhap"
model Session {
  id        String   @id @map("idPhien")
  expiresAt DateTime @map("hetHan")
  token     String   @unique @map("maToken")
  createdAt DateTime @default(now()) @map("ngayTao")
  updatedAt DateTime @updatedAt @map("ngayCapNhat")
  ipAddress String?  @map("diaChiIP")
  userAgent String?  @map("trangThaiNguoiDung")

  userId String @map("idNguoiDung")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String? @map("biMaoDanh")

  @@map("phienDangNhap")
  @@index([userId])
}

//Model Account - Bảng "taiKhoan"
model Account {
  id         String @id @map("idTK")
  accountId  String @map("maTaiKhoan")
  providerId String @map("maNhaCungCap")

  userId String @map("idNguoiDung")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  accessToken           String?   @map("maToken")
  refreshToken          String?   @map("maLamMoiToken")
  idToken               String?   @map("idToken")
  accessTokenExpiresAt  DateTime? @map("maTokenHetHan")
  refreshTokenExpiresAt DateTime? @map("maLamMoiTokenHetHan")
  scope                 String?   @map("phamVi")
  password              String?   @map("matKhau")

  createdAt DateTime @default(now()) @map("ngayTao")
  updatedAt DateTime @updatedAt @map("ngayCapNhat")

  @@map("taiKhoan")
  @@index([userId])
}

//Model Verification - Bảng "xacMinh"
model Verification {
  id         String   @id @map("idXM")
  identifier String   @map("maDinhDanh")
  value      String   @map("giaTri")
  expiresAt  DateTime @map("hetHan")
  createdAt  DateTime @default(now()) @map("ngayTao")
  updatedAt  DateTime @updatedAt @map("ngayCapNhat")

  @@map("xacMinh")
  @@index([identifier])
}

//Model Course - Bảng "khoaHoc"
model Course {
  id               String       @id @default(uuid()) @map("idKH")
  title            String       @map("tieuDe")
  description      String       @map("moTa")
  fileKey          String       @map("tepKH")
  price            Int          @map("gia")
  duration         Int          @map("thoiLuong")
  level            CourseLevel  @default(NguoiMoi) @map("capDo")
  category         String       @map("danhMuc")
  smallDescription String       @map("moTaNgan")
  slug             String       @unique @map("duongDan")
  status           CourseStatus @default(BanNhap) @map("trangThai")
  createdAt        DateTime     @default(now()) @map("ngayTao")
  updatedAt        DateTime     @updatedAt @map("ngayCapNhat")

  userId String @map("idNguoiDung")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  chapter Chapter[]
  @@map("khoaHoc")
}

enum CourseLevel {
  NguoiMoi     
  TrungCap 
  NangCao   
}

enum CourseStatus {
  BanNhap     
  BanChinhThuc
  BanLuuTru  
}

model Chapter{
  id        String   @id @default(uuid()) @map("idC")
  title     String   @map("tenChuong")
  position  Int      @map("thuTu")
  createdAt DateTime @default(now()) @map("ngayTao")
  updatedAt DateTime @updatedAt @map("ngayCapNhat")
  
  lessons   Lesson[]
  courseId  String   @map("idKH")
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("chuong")
  @@index([courseId])
}

model Lesson{
  id           String   @id @default(uuid()) @map("idBH")
  title        String   @map("tenBaiHoc")
  description  String?  @map("moTa") 
  thumbnailKey String?  @map("anhBaiHoc")
  videoKey     String?  @map("maVideo")
  position     Int      @map("thuTu")
  duration     Int?     @map("thoiLuong")
  isFree       Boolean  @default(false) @map("mienPhi")
  createdAt    DateTime @default(now()) @map("ngayTao")
  updatedAt    DateTime @updatedAt @map("ngayCapNhat")
  chapterId String  @map("idC")
  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@map("baiHoc")
  @@index([chapterId])
}